<div class="row">
  <% @sources.each do |source| %>

      <div class="col-sm-6 col-md-4">
        <div class="thumbnail">
          <img src="<%= source.img_url %>" alt="<%= source.name %>">
          <div class="caption">
            <h2><%= source.name %></h2>

            <ul class="list-group">
              <% source.headline.each do |headline| %>
              <li>
                <h3><%= headline %></h3>
              </li>
              <% end %>
            </ul>

            <p><a href="#" class="btn btn-primary" role="button">Button</a>
              <a href="#" class="btn btn-default" role="button">Button</a></p>

          </div>
        </div>
      </div>

  <% end %>
</div>
